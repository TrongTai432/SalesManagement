@model SV20T1020091.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa Người Vận Chuyển";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên Người Giao Hàng :</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>


            <div class="form-group">
                <label>Điện Thoại :</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>


            <div class="form-group">
                @if (!SV20T1020091.BusinessLayers.CommonDataService.IsUsedShipper(Model.ShipperID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa-fa-floppy-o"> </i> Xóa Dữ Liệu
                    </button>
                }
                <a href="~/Shipper" class="btn btn-default">
                    Quay Lại
                </a>
            </div>
        </form>

    </div>

</div>

