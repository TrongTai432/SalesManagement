@model SV20T1020091.DomainModels.Category
@{

    ViewBag.Title = "Cập Nhật Thông Tin Loại Hàng";


}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">

            <input type="hidden" name="CategoryId" value="@Model.CategoryID " />
            <div class="form-group">
                <label>Tên Loại Hàng :</label>
                <input type="text" class="form-control" name="CategoryName" autofocus value="@Model.CategoryName">
                @Html.ValidationMessage("CategoryName", new { @style = "color: #f00" })
            </div>



            <div class="form-group">
                <label>Mô Tả :</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
                @Html.ValidationMessage("Description", new { @style = "color: #f00" })
            </div>



            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-fa-floppy-o"> </i> Lưu Dữ Liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay Lại
                </a>
            </div>
        </form>

    </div>

</div>

